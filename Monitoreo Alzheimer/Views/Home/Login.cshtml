@model Dominio.Entity.Medico

@{
    Layout = null;
}

@if (ViewBag.Indicador == 1)
{
    <script type="text/javascript">
        window.onload = function() {
            swal("Advertencia!", "El usuario no existe o la contraseña no es correcta!", "warning");
        };
    </script>

}



<!DOCTYPE html>
<html dir="ltr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/images/Logo ALZCare (formato PNG).png">
    <title>ALZCare</title>
    <!-- Custom CSS -->
    <link href="~/Content/dist/css/style.min.css" rel="stylesheet">
    <script src="~/Content/sweetalert.min.js"></script>
</head>

<body>
    <div class="main-wrapper">
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
        <div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative"
             style="background:no-repeat center center;">
            <div class="auth-box row text-center">

                <div class="col-lg-7 col-md-5 modal-sm-image">
                    <center>
                        <img src="~/Content/assets/images/Logo ALZCare (formato PNG).png" alt="wrapkit" width="460" height="460" style="display:block;margin:auto;">

                    </center>
                </div>


                <div class="col-lg-5 col-md-7 bg-white">
                    <div class="p-lg-5">
                        <img src="~/Content/assets/images/Logo ALZCare (formato PNG).png" alt="wrapkit" width="100" height="100">
                        <h3 class="mt-3 text-center">Inicio de sesión</h3>

                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "mt-4" }))
                        {

                            <div class="row">

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "text", @placeholder = "Usuario", @maxlength = "10", @required = "required" } })

                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control form-control-sm", @type = "password", @placeholder = "Contraseña", @maxlength = "10", @required = "required" } })

                                        </div>
                                    </div>
                                </div>


                                <div class="col-lg-12 text-center">
                                    <button type="submit" class="btn btn-block btn-dark">Ingresar</button>
                                </div>
                                <div class="col-lg-12 text-center mt-5">
                                    Aun no tienes una cuenta? <a href='@Url.Action("RegistrarMedico","Home")' class="text-danger">Registrate</a>
                                </div>


                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- Login box.scss -->
        <!-- ============================================================== -->
    </div>


  

    <!-- ============================================================== -->
    <!-- All Required js -->
    <!-- ============================================================== -->
    <script src="~/Content/assets/libs/jquery/dist/jquery.min.js "></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/Content/assets/libs/popper.js/dist/umd/popper.min.js "></script>
    <script src="~/Content/assets/libs/bootstrap/dist/js/bootstrap.min.js "></script>
    <!-- ============================================================== -->
    <!-- This page plugin js -->
    <!-- ============================================================== -->
    <script>
        $(".preloader ").fadeOut();
    </script>
</body>

</html>