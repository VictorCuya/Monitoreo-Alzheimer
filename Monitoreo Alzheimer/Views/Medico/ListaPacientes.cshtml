@model IEnumerable<Dominio.Entity.Paciente>


@{
    ViewBag.Title = "ListaPacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-lg-12">

        <h3 class="page-title text-truncate text-dark font-weight-medium mb-1">Lista de pacientes</h3>

    </div>

</div>

<div class="row">

    <div class="col-lg-12">

        <a class="btn btn-danger" href='@Url.Action("RegistrarPaciente","Medico")' style="float:right;">Registrar paciente</a>

    </div>

</div>
<br />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">


                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered no-wrap" style="width:100%">
                        <thead>
                            <tr>
                                <th colspan="4" style="text-align:center;color:azure" class="bg-success"><span class="fa fa-user"> </span> Datos del paciente</th>
                                <th colspan="4" style="text-align:center;color:azure" class="bg-success"><span class="fas fa-heartbeat"> </span> Signos Vitales</th>
                                <th colspan="1" style="text-align:center;color:azure" class="bg-success"><span class="fas fa-chart-bar"> </span> Reporte</th>
                            </tr>

                            <tr>
                                <th>DNI</th>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Edad</th>
                                <th>Sístole (mmHg)</th>
                                <th>Diástole (mmHg)</th>
                                <th>Oxigenación (%)</th>
                                <th>Última medición</th>
                                <th>Visualizar</th>
                            </tr>
                        </thead>

                        <tbody style="text-align:center;">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DNI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.apellido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.edad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sistole)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.diastole)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.oxigeno)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecTomaDatos)
                                </td>
                                <td class="text-center">
                                    @Html.ActionLink(" ", "DashboardPaciente", new { id = item.DNI }, new { @class = "fas fa-eye" })


                                </td>
                            </tr>

                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>





</div>

